{
  "name": "swamp-dish",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "next start",
    "build": "next build",
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "install:clean": "rm -rf node_modules/ && rm -rf yarn.lock && yarn install && yarn run build:tailwind && yarn run dev",
